<script>
document.addEventListener('DOMContentLoaded', () => {
    
    const palette = {
        primary: '#003F5C',
        secondary: '#366682',
        accent: '#7A9EAF',
        light: '#C3D8E1',
        base: '#F2F2F2',
        green: '#4CAF50',
        red: '#F44336'
    };
    
    const generateTimeSeriesData = () => {
        const data = [];
        const dates = [];
        let value = 4000;
        const startDate = new Date('2000-01-01');

        for (let i = 0; i < 309; i++) { // Approx 25.75 years of months
            const date = new Date(startDate);
            date.setMonth(startDate.getMonth() + i);
            dates.push(date);

            let change = (Math.random() - 0.45) * 150;
            const month = date.getMonth();

            // Add seasonality
            if (month === 3) change += 80; // April up
            if (month === 8) change -= 90; // September down
            if (month === 11) change += 70; // December up

            // Simulate market events
            const year = date.getFullYear();
            if (year >= 2001 && year <= 2002) value *= 0.99; // Dot-com bust
            if (year === 2008) value *= 0.95; // Financial crisis
            if (year === 2020 && month >= 2 && month <= 3) value *= 0.85; // COVID dip
            if (year === 2020 && month > 3) value *= 1.04; // COVID recovery
            if (year > 2020) value *= 1.006; // General recovery

            value += change;
            if (value < 2000) value = 2000;
            data.push(value);
        }
        return { dates, data };
    };

    const timeSeries = generateTimeSeriesData();
    const rollingAvg = timeSeries.data.map((_, i, arr) => {
        if (i < 11) return null;
        const window = arr.slice(i - 11, i + 1);
        return window.reduce((a, b) => a + b, 0) / 12;
    });

    const historicalTrendCtx = document.getElementById('historicalTrendChart').getContext('2d');
    new Chart(historicalTrendCtx, {
        type: 'line',
        data: {
            labels: timeSeries.dates,
            datasets: [{
                label: 'FTSE 100 Index',
                data: timeSeries.data,
                borderColor: palette.primary,
                backgroundColor: 'rgba(0, 63, 92, 0.1)',
                fill: true,
                tension: 0.1,
                pointRadius: 0
            }, {
                label: '12-Month Moving Average',
                data: rollingAvg,
                borderColor: palette.red,
                borderDash: [5, 5],
                fill: false,
                tension: 0.1,
                pointRadius: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: {
                    type: 'time',
                    time: { unit: 'year' },
                    grid: { display: false }
                },
                y: {
                    title: { display: true, text: 'Index Value' }
                }
            },
            plugins: {
                tooltip: { callbacks: { title: (items) => items[0].chart.data.labels[items[0].dataIndex].toLocaleDateString() } }
            }
        }
    });

    // Data for Box Plot and Bar Chart
    const monthlyReturns = {};
    for (let i = 1; i < timeSeries.data.length; i++) {
        const month = timeSeries.dates[i].getMonth();
        const monthlyReturn = ((timeSeries.data[i] / timeSeries.data[i-1]) - 1) * 100;
        if (!monthlyReturns[month]) {
            monthlyReturns[month] = [];
        }
        monthlyReturns[month].push(monthlyReturn);
    }
    
    const monthLabels = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
    
    // Plotly Box Plot
    const boxPlotData = monthLabels.map((month, i) => {
        return {
            y: monthlyReturns[i] || [],
            name: month,
            type: 'box',
            marker: { color: palette.secondary },
            boxpoints: 'Outliers'
        };
    });

    const boxPlotLayout = {
        title: { text: 'Monthly Return Distribution', font: { color: palette.primary } },
        yaxis: { title: 'Monthly Return (%)', zerolinecolor: '#000', zerolinewidth: 1.5 },
        xaxis: { title: 'Month' },
        paper_bgcolor: 'rgba(0,0,0,0)',
        plot_bgcolor: 'rgba(0,0,0,0)',
        showlegend: false,
        font: { family: 'Inter, sans-serif' }
    };

    Plotly.newPlot('monthlyBoxPlot', boxPlotData, boxPlotLayout, {responsive: true});


    // Chart.js Average Returns Bar Chart
    const averageReturnsData = monthLabels.map((_, i) => {
        const returns = monthlyReturns[i] || [0];
        return returns.reduce((a, b) => a + b, 0) / returns.length;
    });

    const averageReturnsCtx = document.getElementById('averageReturnsChart').getContext('2d');
    new Chart(averageReturnsCtx, {
        type: 'bar',
        data: {
            labels: monthLabels,
            datasets: [{
                label: 'Average Monthly Return',
                data: averageReturnsData,
                backgroundColor: averageReturnsData.map(val => val > 0 ? palette.green : palette.red)
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    title: { display: true, text: 'Average Return (%)' },
                    ticks: { callback: value => `${value.toFixed(1)}%` }
                }
            },
            plugins: {
                legend: { display: false },
                tooltip: { callbacks: { title: (items) => items[0].chart.data.labels[items[0].dataIndex] } }
            }
        }
    });

});
</script>
